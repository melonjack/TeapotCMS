    "events/*": [
        {
            "key": "title",
            "type": "input",
            "templateOptions": { "label": "Title", "required": true }
        },
        {
            "key": "events",
            "type": "array",
            "templateOptions": {
                "label": "Events",
                "fields": [
                    {
                        "key": "date",
                        "type": "date",
                        "templateOptions": { "label": "Date of the event", "required": true }
                    },
                    {
                        "key": "location",
                        "type": "textarea",
                        "templateOptions": { "label": "Location/Details", "required": true }
                    },
                    {
                        "key": "link",
                        "type": "input",
                        "templateOptions": { "label": "Link for more info" }
                    }
                ]
            }
        },
        {
            "key": "background",
            "type": "image",
            "templateOptions": { "label": "Background image", "required": true }
        }
    ],


